<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiceRollActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTopHori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottomHori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeftVert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRightVert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />

    <View
        android:id="@+id/diceRollBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineBottomHori"
        app:layout_constraintEnd_toStartOf="@id/guidelineRightVert"
        app:layout_constraintStart_toEndOf="@id/guidelineLeftVert"
        app:layout_constraintTop_toBottomOf="@id/guidelineTopHori" />

    <ImageView
        android:id="@+id/diceFace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Dice Face"
        android:padding="100dp"
        app:layout_constraintBottom_toTopOf="@+id/closeButton"
        app:layout_constraintEnd_toStartOf="@id/guidelineRightVert"
        app:layout_constraintStart_toEndOf="@id/guidelineLeftVert"
        app:layout_constraintTop_toBottomOf="@id/guidelineTopHori" />

    <Button
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        app:layout_constraintBottom_toBottomOf="@+id/diceRollBackground"
        app:layout_constraintEnd_toStartOf="@+id/guidelineRightVert"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeftVert"
        app:layout_constraintTop_toBottomOf="@+id/diceFace" />


</androidx.constraintlayout.widget.ConstraintLayout>